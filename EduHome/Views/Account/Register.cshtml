@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using EduHome.ViewModels
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RegisterViewModel
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->

<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <form asp-action="Register" asp-controller="Account" method="post">

                                <label>Fullname</label>
                                <input asp-for="Fullname" placeholder="FullName" />
                                <span asp-validation-for="Fullname" class="text-danger"></span>

                                <label>Username</label>
                                <input asp-for="Username" placeholder="UserName" />
                                <span asp-validation-for="Username" class="text-danger"></span>

                                <label>Email</label>
                                <input asp-for="Email" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                                <label>Password</label>
                                <input asp-for="Password" placeholder="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>

                                <label>Passwordconfirm</label>
                                <input asp-for="PasswordConfirm" placeholder="passwordconfirm" />
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>


                                <div class="button-box">
                                @*    <button type="submit" class="default-btn">Register</button>*@
                                    <a asp-action="EmailConfirm">Register</a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>