@using EduHome.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ResetPasswordViewModel
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>RESET</h2>
                        
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post">






                                <label>NewPassword</label>
                                <input asp-for="NewPassword" placeholder="Newpassword" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>


                                <label>ConfirmNewPassword</label>
                                <input asp-for="ConfirmNewPassword" placeholder="ConfirmNewPassword" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>



                                <div class="button-box">

                                    <button type="submit" class="default-btn">ResetPassword</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

